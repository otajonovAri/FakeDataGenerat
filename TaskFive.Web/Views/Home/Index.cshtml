@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-4">
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body">
            <h5 class="card-title mb-3">🎯 Data Generation Options</h5>
            <form class="row g-3">
                <div class="col-md-4">
                    <label for="regionInput" class="form-label fw-semibold">🌍 Select Country</label>
                    <select class="form-select" id="regionInput">
                        <option value="0">Russia</option>
                        <option value="1">United States</option>
                        <option value="2">Germany</option>
                        <option value="3">France</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label for="errorsCountText" class="form-label fw-semibold">💡 Mistakes per Line</label>
                    <input type="number" class="form-control" id="errorsCountText" value="0" min="0" max="1000">
                    <input type="range" class="form-range mt-2" id="errorsCountSlider" step="0.25" value="0" max="10">
                </div>

                <div class="col-md-4">
                    <label for="seedInput" class="form-label fw-semibold">🔢 Seed Value</label>
                    <input type="text" class="form-control" id="seedInput">
                </div>

                <div class="col-md-6 d-grid">
                    <button type="button" class="btn btn-outline-primary" id="randomSeed">🎲 Generate Random Seed</button>
                </div>
                <div class="col-md-6 d-grid">
                    <button type="button" class="btn btn-success" id="createCsv">⬇️ Download Excel File</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="card-title mb-3">📋 Generated User Data</h5>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle" id="dataTable">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Id</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Gender</th>
                            <th>Address</th>
                            <th>Phone Number</th>
                        </tr>
                    </thead>
                    <tbody class="table-body">
                        <!-- Dynamic rows go here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
